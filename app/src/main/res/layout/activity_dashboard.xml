<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="5"
        android:alignmentMode="alignBounds"
        android:padding="16dp">

        <!-- Columna 1 -->
        <ImageButton
            android:id="@+id/button1"
            style="@style/RoundedButton"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:src="@drawable/asalto"
            android:text="Button 1" />

        <ImageButton
            style="@style/RoundedButton"
            android:id="@+id/button3"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:cropToPadding="false"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/basura_calles"
            android:text="Button 2" />

        <ImageButton
            style="@style/RoundedButton"
            android:id="@+id/button5"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:src="@drawable/corte_agua"
            android:text="Button 3" />

        <Button
            style="@style/RoundedButton"
            android:layout_width="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:src="@drawable/violencia"
            android:text="Button 4"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:text="Button 5"
            style="@style/RoundedButton"/>

        <!-- Columna 2 -->
        <ImageButton
            style="@style/RoundedButton"
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:src="@drawable/calle_mal_estado"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:text="Button 6" />

        <ImageButton
            style="@style/RoundedButton"
            android:id="@+id/button4"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/colision_vehicular"
            android:text="Button 7" />

        <ImageButton
            style="@style/RoundedButton"
            android:id="@+id/button6"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:src="@drawable/corteluz"
            android:text="Button 8" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:text="Button 9"
            style="@style/RoundedButton"/>

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>